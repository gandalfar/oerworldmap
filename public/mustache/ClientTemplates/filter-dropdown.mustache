<div class="btn-group dropdown filter" data-filter-name="{{name}}">

    {{#if small}}

        <button
            type="button"
            class="btn btn-default dropdown-toggle {{#if active}} active {{/if}}"
            title="{{button_title}}"
            data-toggle="dropdown"
        >
            <span class="text" style="margin-right: 10px;">{{{button_text}}}</span>
            <i class="fa fa-chevron-down"></i>
        </button>

    {{else}}

        <button
            type="button"
            class="btn btn-default {{#if active}} active {{/if}}"
            title="{{button_title}}"
            data-filter-action="toggle-filter"
        >
            <span class="text">{{{button_text}}}</span>
        </button>

        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-chevron-down"></i>
        </button>

    {{/if}}

    {{#if typeahead}}

        <div class="dropdown-menu dropdown-menu-right dropdown-menu-typeahead">
            <button type="button" class="btn btn-warning" data-filter-action="apply-filter">Apply Filter</button>
            <div style="position: relative;">
                <input type="text" class="form-control typeahead" placeholder="..." />
                <div class="input-icon">
                    <i class="fa fa-search"></i>
                </div>
            </div>
        </div>

    {{else}}

        <div class="dropdown-menu dropdown-menu-right">
            <button type="button" class="btn btn-warning" data-filter-action="apply-filter">Apply Filter</button>

            {{#each buckets}}

                <div class="tt-suggestion tt-selectable">
                    {{> filter-dropdown-entry}}
                </div>

            {{/each}}

        </div>

    {{/if}}

</div>
