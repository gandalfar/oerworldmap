{{#if countryChampionFor}}

    <span>
        {{i18n (stringFormat "%s.countryChampionFor" @type)}}
        {{#countryChampionFor}}
            <a href="/country/{{.}}">{{i18n . bundle="countries"}}</a>{{#unless @last}},{{/unless}}
        {{/countryChampionFor}}
    </span>

{{else}}

    {{! just show country, if not a countrychampion â€“ could be more precise: show if they defer ... }}

    {{#if location.address.addressCountry}}
        <span>
            <a href="/country/{{location.address.addressCountry}}">{{i18n location.address.addressCountry bundle = "countries"}}</a>
        </span>
    {{/if}}

{{/if}}

{{#if additionalType}}
    <span>
        Additional Type:
        {{#additionalType}}
            {{.}}{{#unless @last}},{{/unless}}
        {{/additionalType}}
    </span>
{{/if}}
