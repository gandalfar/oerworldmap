<span>
    {{#if dateCreated}}
        {{momentWrapper dateCreated "D. MMM YYYY"}}
    {{else}}
        {{momentWrapper resource.dateCreated "D. MMM YYYY"}}
    {{/if}}
</span>

{{#if creator}}
    <span>
        {{i18n "ResourceIndex.Article.subtitle.contributedBy"}}
        {{#creator}}
            <a href="/resource/{{@id}}">
                {{#localized this.name language=@root.language}}
                    {{[@value]}}
                {{else}}
                    {{[@id]}}
                {{/localized}}
            </a>{{#unless @last}},{{/unless}}
        {{/creator}}
    </span>
{{/if}}

{{#if citation}}
    {{{i18n "ResourceIndex.Article.subtitle.originallyPublished"}}} <a href="{{exampleOfWork}}">{{exampleOfWork}}</a>.
{{/if}}

{{#if additionalType}}
    <span>
        {{i18n "ResourceIndex.Article.subtitle.additionalType"}}
        {{#additionalType}}
            {{.}}{{#unless @last}},{{/unless}}
        {{/additionalType}}
    </span>
{{/if}}
