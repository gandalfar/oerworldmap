{{#if startDate}}
    <span>
        {{#if endDate}}
            {{daterange startDate endDate}}
        {{else}}
            {{moment startDate "D. MMM YYYY"}}
        {{/if}}
    </span>
{{/if}}

{{#if location}}
    <span>
        {{formatLocation "city_country" location ""}}
    </span>
{{/if}}

{{#if additionalType}}
    <span>
        Additional Type:
        {{#additionalType}}
            {{.}}{{#unless @last}},{{/unless}}
        {{/additionalType}}
    </span>
{{/if}}
