<span class="resource">
    {{getIcon @type}}
    <a href="/resource/{{@id}}">
        {{#localized displayName language=@root.language}}
            {{[@value]}}
        {{else}}
            {{#localized name language=@root.language}}
                {{[@value]}}
            {{else}}
                {{[@id]}}
            {{/localized}}
        {{/localized}}
    </a>
</span>
